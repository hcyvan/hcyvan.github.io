#设置编辑器
set editor = "emacsclient -t -a emacs"
#将邮件头也放在编辑器中
set edit_headers=yes
#设置文件头
set sendmail="/usr/bin/msmtp"
set use_from=yes
set from="navych@126.com"
set realname="Navy Cheng"
my_hdr Reply-To: Navy Cheng <navych@126.com>


set mbox_type=Maildir
#默认信箱目录
set folder="~/mail"
#脱机信箱，进入mutt后默认的信箱
set spoolfile="+inbox"
#邮件排列顺序
set sort=reverse-date
#设置发件箱
set record="+outbox"

#回信时是否包含原文。
set include
